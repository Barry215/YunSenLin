<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_user_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:elevation="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户管理"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            />
    </android.support.v7.widget.Toolbar>

    <!--android:theme="@style/AppTheme.AppBarOverlay"-->
    <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前账号"
            android:textSize="18sp"
            android:textColor="@color/activity_text"
            app:layout_marginLeftPercent="10%w"
            />

        <TextView
            android:id="@+id/tv_user_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18100174605"
            android:textColor="@color/activity_text_accent"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

    <TextView
            android:id="@+id/tv_user_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据最后同步"
            android:textSize="18sp"
            android:textColor="@color/activity_text"
            app:layout_marginLeftPercent="10%w"
            />

        <TextView
            android:id="@+id/tv_user_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-06 08:00:56"
            android:textColor="@color/activity_text_accent"
            android:textSize="18sp"
            android:layout_marginLeft="14dp"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:id="@+id/btn_user_1"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="同步数据"
        android:textColor="@color/activity_btn_text"
        android:textSize="15sp"
        android:background="@color/activity_btn_background_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_widthPercent="80%w"
        />

    <Button
        android:id="@+id/btn_user_2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="打开同步(强烈推荐)"
        android:textColor="@color/activity_btn_text"
        android:textSize="15sp"
        android:background="@color/activity_btn_background_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_widthPercent="80%w"
        />

    <Button
        android:id="@+id/btn_user_3"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="切换账户"
        android:textColor="@color/activity_btn_text"
        android:textSize="15sp"
        android:background="@color/activity_btn_background_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_widthPercent="80%w"
        />

    <Button
        android:id="@+id/btn_user_4"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="退出"
        android:textColor="@color/activity_btn_text"
        android:textSize="15sp"
        android:background="@color/activity_btn_background_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_widthPercent="80%w"
        />

    <Button
        android:id="@+id/btn_user_5"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="更改密码"
        android:textColor="@color/activity_btn_text"
        android:textSize="15sp"
        android:background="@color/activity_btn_background_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_widthPercent="80%w"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当您打开同步之后，我们将在云端保存您的计算数据，数据无价，推荐您打开同步功能"
        android:textColor="@color/activity_text"
        android:textSize="15sp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        app:layout_marginLeftPercent="10%w"
        app:layout_marginRightPercent="10%w"
        />

</com.zhy.android.percent.support.PercentLinearLayout>