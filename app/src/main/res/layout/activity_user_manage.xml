<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_user_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前账号"
            />

        <TextView
            android:id="@+id/tv_user_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18100174605"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

    <TextView
            android:id="@+id/tv_user_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据最后同步"
            />

        <TextView
            android:id="@+id/tv_user_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-05-06 08:00:56"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_user_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步数据"/>

    <Button
        android:id="@+id/btn_user_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开同步(强烈推荐)"/>

    <Button
        android:id="@+id/btn_user_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换账户"/>

    <Button
        android:id="@+id/btn_user_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"/>

    <Button
        android:id="@+id/btn_user_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改密码"/>

</LinearLayout>