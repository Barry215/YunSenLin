<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_btn_background_subWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="@color/WHITE"
        >

        <Button
            android:id="@+id/btn_fg_yuanmu_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="中国原木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_sub_red"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <Button
            android:id="@+id/btn_fg_yuanmu_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="美国原木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_subWhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <Button
            android:id="@+id/btn_fg_yuanmu_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="俄罗斯原木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_subWhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/WHITE"
        >

        <Button
            android:id="@+id/btn_fg_yuanmu_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="中国原木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_subWhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <Button
            android:id="@+id/btn_fg_yuanmu_5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="东南亚原木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_subWhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

        <Button
            android:id="@+id/btn_fg_yuanmu_6"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="椽木"
            android:textColor="@color/activity_btn_text_white"
            android:background="@color/activity_background_subWhite"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/activity_btn_background_white"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检尺长"
                android:textColor="@color/activity_text_dark"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检尺径"
                android:textColor="@color/activity_text_dark"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="根数"
                android:textColor="@color/activity_text_dark"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/activity_text_dark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/activity_text_dark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/activity_text_dark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textSize="18sp"
                android:textColor="@color/activity_text_dark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米"
                android:textSize="18sp"
                android:textColor="@color/activity_text_dark"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="根"
                android:textSize="18sp"
                android:textColor="@color/activity_text_dark"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/edit_state"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="18sp"
            android:textColor="@color/activity_text_dark"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/activity_text_dark"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</LinearLayout>